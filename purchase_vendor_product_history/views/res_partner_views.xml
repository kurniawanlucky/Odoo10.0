<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">purchase_vendor_product_history.view_partner_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="priority" eval="5"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_purchase_product"
                    groups="purchase.group_purchase_user"
                    icon="fa-history">
                    <field string="Purchase Product" name="count_product_purchase_history" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>
</odoo>
