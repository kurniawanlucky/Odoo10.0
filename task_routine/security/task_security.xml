<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.module.category" id="module_routine_category">
            <field name="name">Task Routine</field>
            <field name="description">Helps you manage your Routine.</field>
            <field name="sequence">18</field>
        </record>

        <record id="group_routine_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_routine_category"/>
        </record>

        <record id="group_routine_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_routine_category"/>
            <field name="implied_ids" eval="[(4, ref('task_routine.group_routine_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>