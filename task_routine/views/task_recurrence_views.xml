<?xml version="1.0"?>
<odoo>
    <record id="task_recurrence_view_form" model="ir.ui.view">
        <field name="name">task.recurrence.view.form</field>
        <field name="model">project.task.recurrence</field>
        <field name="arch" type="xml">
            <form string="Task Recurrence">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" class="oe_inline"/></h1>
                    </div>
                    <group>
                        <group>
                            <label for="repeat_interval" string="Execute Every"/>
                            <div>
                                <field name="repeat_interval" class="oe_inline" required="1"/>
                                <field name="repeat_unit" class="oe_inline" required="1"/>
                            </div>
                            <field name="repeat_weekday" attrs="{'invisible': [('repeat_unit', '!=', 'day')]}"/>
                            <field name="repeat_type" required="1"/>
                            <field name="repeat_number" required="1"/>
                        </group>
                        <group>
                            <field name="next_recurrence_date"/>
                            <field name="mon" attrs="{'invisible': [('repeat_unit', '!=', 'week')]}"/>
                            <field name="tue" attrs="{'invisible': [('repeat_unit', '!=', 'week')]}"/>
                            <field name="wed" attrs="{'invisible': [('repeat_unit', '!=', 'week')]}"/>
                            <field name="thu" attrs="{'invisible': [('repeat_unit', '!=', 'week')]}"/>
                            <field name="fri" attrs="{'invisible': [('repeat_unit', '!=', 'week')]}"/>
                            <field name="sat" attrs="{'invisible': [('repeat_unit', '!=', 'week')]}"/>
                            <field name="sun" attrs="{'invisible': [('repeat_unit', '!=', 'week')]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="task_recurrence_view_tree" model="ir.ui.view">
        <field name="name">task.recurrence.view.tree</field>
        <field name="model">project.task.recurrence</field>
        <field name="arch" type="xml">
            <tree string="Task Recurrence">
                <field name="name"/>
                <field name="repeat_interval"/>
                <field name="repeat_unit"/>
                <field name="repeat_type"/>
                <field name="next_recurrence_date"/>
            </tree>
        </field>
    </record>

    <record id="task_recurrence_action" model="ir.actions.act_window">
        <field name="name">Task Recurrence</field>
        <field name="res_model">project.task.recurrence</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create an Group
            </p>
        </field>
    </record>

    <menuitem name="Task Recurrence"
        id="task_recurrence_menu"
        sequence="3" action="task_routine.task_recurrence_action"
        parent="menu_routine_configuration"/>

</odoo>
