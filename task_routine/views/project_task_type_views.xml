<odoo>

    <record id="routine_project_type_action" model="ir.actions.act_window">
        <field name="name">Routine Stages</field>
        <field name="res_model">project.task.type</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="project.task_type_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create an Routine Stage
            </p><p>
                Routine stages are used to track the progress of an Event from its origin until its conclusion.
            </p>
        </field>
    </record>

    <menuitem name="Routine Stages"
        id="routine_project_stage_menu"
        sequence="2" action="routine_project_type_action"
        parent="menu_routine_configuration"/>

</odoo>
