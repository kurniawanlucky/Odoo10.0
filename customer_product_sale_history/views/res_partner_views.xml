<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">customer_product_sale_history.view_partner_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="priority" eval="5"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_sale_product"
                    groups="sales_team.group_sale_salesman"
                    icon="fa-history">
                    <field string="Product" name="count_product_sale_history" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>
</odoo>