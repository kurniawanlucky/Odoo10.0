<odoo>
    <record id="product_template_search_view" model="ir.ui.view">
        <field name="name">product_brands.product_template_search_view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="brand_id"/>
                <filter string="Brand" name="group_by_brand" domain="[]" context="{'group_by' : 'brand_id'}"/>
                <separator/>
            </field>
        </field>
    </record>

    <record id="view_product_template_tree_brand" model="ir.ui.view">
        <field name="name">product_brand.product_template_tree_view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="brand_id"/>
            </field>
        </field>
    </record>

    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product_brands.product_template_form_view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <field name="type" position="before">
                <field name="brand_id" placeholder="Brand"/>
            </field>
        </field>
    </record>
</odoo>
