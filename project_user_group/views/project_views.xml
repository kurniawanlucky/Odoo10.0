<odoo>
    <record id="view_project_kanban" model="ir.ui.view">
        <field name="name">project_user_group.view_project_kanban</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_kanban"/>
        <field name="priority">24</field>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="group_id" invisible="1"/>\
            </field>
            <xpath expr="//div[hasclass('o_primary')]/field[@name='tag_ids']" position="before">
                <div t-if="record.group_id.raw_value">
                    <span class="fa fa-group mr-2" title="Group"></span><field name="group_id"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="view_project_project_filter" model="ir.ui.view">
        <field name="name">project_user_group.view_project_project_filter</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_project_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='Partner']" position="after">
                <filter string="Group" name="group" domain="[]" context="{'group_by':'group_id'}"/>
            </xpath>
        </field>
    </record>

    <record id="edit_project" model="ir.ui.view">
        <field name="name">project_user_group.edit_project</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="group_id" class="o_task_user_field" options="{'no_open': True, 'no_quick_create': True}"/>
            </field>
        </field>
    </record>
</odoo>
